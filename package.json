{
  "name": "astro-arena",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "format": "prettier --write .",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "prepare": "node ./scripts/install-husky.mjs"
  },
  "dependencies": {
    "vue": "^3.5.22",
    "three": "^0.169.0",
    "three-stdlib": "^2.35.13",
    "postprocessing": "^6.36.4",
    "detect-gpu": "^5.0.42",
    "gsap": "^3.12.5",
    "stats.js": "^0.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/three": "^0.169.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.29.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "vitest": "^2.1.4",
    "jsdom": "^25.0.1"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,js,jsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
